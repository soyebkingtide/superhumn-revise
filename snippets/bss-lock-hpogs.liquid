
{% unless bss_lock_check contains 'Liquid error' %}
    {% if bss_lock_check contains 'true' %}
        {%- assign price_without_currency = product.price | money_without_currency -%}
        {%- assign price_divided = product.price | divided_by: 100.00 -%}
        {%- assign price_string = '"price":"' | append: price_without_currency | append: '"' -%}
        {% assign new_product_schema = null %}
        {% if product.variants.size > 0 %}
        {% for variant in product.variants %}
            {%- assign price_variant_divided = variant.price | divided_by: 100 -%}
            {%- assign price_variant_string = '"price":"' | append: price_variant_divided | append: '"' -%}
            {% assign product_schema = product_schema | replace: price_variant_string, '"price":"Hide Price By BSS"' %}
            {% assign new_product_schema = product_schema %}
        {% endfor %}
        {% endif %}
        {{
            new_product_schema
            | replace: price_without_currency, 'Hide Price By BSS'
            | replace: price_divided, 'Hide Price By BSS'
            | replace: price_string, '"price":"Hide Price By BSS"'
        }}
    {% else %}
        {{ product_schema }}
    {% endif %}
{%- else -%}
    {{ product_schema }}
{%- endunless -%}
