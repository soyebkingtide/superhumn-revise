<script>
  function flyImage(selector, delay = 0) {
    const el = document.querySelector(selector);
    if (!el) return;
    setTimeout(() => {
      el.classList.add("fly-in");
      el.addEventListener("animationend", () => {
        el.style.opacity = "1";
        el.classList.add("floating");
      }, { once: true });
    }, delay);
  }

  // character-news enter one by one
  flyImage("#jessica-new", 2000);
  flyImage("#omi-new", 1500);
  flyImage("#marce-new", 2500);
  flyImage("#jade-new", 500);

  // Mouse tilt
  document.addEventListener("mousemove", (e) => {
    const { innerWidth, innerHeight } = window;
    const moveX = (e.clientX - innerWidth / 2) / 40;
    const moveY = (e.clientY - innerHeight / 2) / 40;
    document.querySelectorAll(".character-new").forEach((img) => {
      img.style.setProperty("--tiltX", `${-moveY}deg`);
      img.style.setProperty("--tiltY", `${moveX}deg`);
    });
  });

  // Reset tilt when leaving window
  window.addEventListener("mouseout", (e) => {
    if (!e.relatedTarget && !e.toElement) {
      document.querySelectorAll(".character-new").forEach((img) => {
        img.style.setProperty("--tiltX", `0deg`);
        img.style.setProperty("--tiltY", `0deg`);
      });
    }
  });
</script>

