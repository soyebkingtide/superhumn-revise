<style>

    body {
  background: linear-gradient(to top, #0a0a2a, #2a2a72);
  background-image: url("https://cdn.shopify.com/s/files/1/0610/8938/2550/files/Section.png?v=1757599588");
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  overflow: hidden;
}
.light_wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: -1;
}
.light {
  position: absolute;

  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.lightbase {
  position: absolute;

  left: 50%;
  transform: translate(-50%, -50%);

  top: 50%;
}

.character {
  position: absolute;
  opacity: 0;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.2) rotateX(var(--tiltX, 0deg))
    rotateY(var(--tiltY, 0deg));
  transition: transform 0.15s ease-out; /* smooth mouse tilt */
}

/* Individual final positions */
#jessica {
  --final-x: 309px;
  --final-y: 80px;
}
#omi {
  --final-x: -100px !important;
  --final-y: -66px !important;
}
#marce {
  --final-x: 268px;
  --final-y: -80px;
}
#jade {
  --final-x: 100px;
  --final-y: -30px;
}

/* Fly in animation */

@keyframes opacity {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.element-opacity {
  animation: opacity 10s forwards ease-in-out;
}
@keyframes floatMove {
  0% {
    transform: translate(-50%, -50%);
    opacity: 0;
  }
  15% {
    /* around 1500ms if duration = 10s */
    opacity: 0;
  }
  16% {
    opacity: 1;
  }
  25% {
    transform: translate(-49.5%, -49.5%);
  }
  50% {
    transform: translate(-50.5%, -50.5%);
  }
  75% {
    transform: translate(-49.5%, -49.5%);
  }
  100% {
    transform: translate(-50%, -50%);
  }
}

.element {
  animation: floatMove 10s infinite ease-in-out;
}

.fly-in {
  animation: flyIn 1.5s ease forwards;
}

@keyframes flyIn {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.2) rotateX(var(--tiltX, 0deg))
      rotateY(var(--tiltY, 0deg));
  }
  100% {
    opacity: 1;
    transform: translate(
        calc(-50% + var(--final-x)),
        calc(-50% + var(--final-y))
      )
      scale(1) rotateX(var(--tiltX, 0deg)) rotateY(var(--tiltY, 0deg));
  }
}

/* Floating stays relative to final position */
.floating {
  animation: floating 3s ease-in-out infinite;
}

@keyframes floating {
  0% {
    transform: translate(
        calc(-50% + var(--final-x)),
        calc(-50% + var(--final-y))
      )
      scale(1) rotateX(var(--tiltX, 0deg)) rotateY(var(--tiltY, 0deg));
  }
  50% {
    transform: translate(
        calc(-50% + var(--final-x) - 10px),
        calc(-50% + var(--final-y) - 8px)
      )
      scale(1.05) rotateX(var(--tiltX, 0deg)) rotateY(var(--tiltY, 0deg));
  }
  100% {
    transform: translate(
        calc(-50% + var(--final-x)),
        calc(-50% + var(--final-y))
      )
      scale(1) rotateX(var(--tiltX, 0deg)) rotateY(var(--tiltY, 0deg));
  }
}

