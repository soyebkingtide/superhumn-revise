{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .field__input, .customer .field input {
    height: auto !important;
  }

  .field {
    margin: 10px 0 !important;
    box-shadow: none;
  }

  .field input {
    transition: box-shadow var(--duration-short) ease;
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">



<div class="grid grid--1-col-tablet-down grid--2-col">

<div class="grid__item">
  <h1 class="main-page-title page-title h2{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
    {% unless customer %}

  

  <div class="customer-login ">
    
<div class="customer-login" style="max-width: 400px; margin: 40px auto;">
  <h2 style="text-align: center;">Customer Login</h2>

  {% form 'customer_login' %}
    {% if form.errors %}
      <div style="color: red; margin-bottom: 15px;">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div style="margin-bottom: 15px;">
      <label for="CustomerEmail">Email</label>
      <input type="email" name="customer[email]" id="CustomerEmail" required style="width: 100%; padding: 10px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="CustomerPassword">Password</label>
      <input type="password" name="customer[password]" id="CustomerPassword" required style="width: 100%; padding: 10px;">
    </div>

    <div style="margin-bottom: 20px;">
      <a href="/account/recover">Forgot your password?</a>
    </div>

    <button type="submit" style="width: 100%; padding: 10px; background: #000; color: #fff;">
      Login
    </button>
  {% endform %}

  <p style="text-align: center; margin-top: 20px;">
    Don't have an account? <a href="/account/register">Register here</a>
  </p>
</div>
{% else %}
  <p style="text-align: center;">Welcome {{ customer.first_name}}  {{ customer.last_name}}!    You are already logged in. <a href="/account">Go to your account</a></p>

    
  </div>
  
{% endunless %}

</div>
    
  

  <div class="grid__item rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
content
  </div>
</div>

</div>

<!-- JS: Toggle # of locations -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const contactForm_numlocations = document.querySelector('#ContactForm-numlocations');
    const contactForm_multiple = document.querySelector('#ContactForm-multiple');

    function toggleOptionDisplay() {
      contactForm_numlocations.style.display = contactForm_multiple.value === "yes" ? "block" : "none";
    }

    contactForm_multiple.addEventListener("change", toggleOptionDisplay);
    toggleOptionDisplay(); // Run on load
  });
</script>





{% schema %}
  {
    "name": "Partner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
  {% endschema %}
  