{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h2{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}

    <form method="post" action="/contact#wholesale-inquiry" id="wholesale-inquiry-form" class="form">
  <h2>ðŸ”¹ Company Info</h2>
  <label>Company Name*
    <input type="text" name="contact[company_name]" required>
  </label>

  <label>Website
    <input type="url" name="contact[website]">
  </label>

  <label>Business Type*
    <select name="contact[business_type]" required>
      <option value="">-- Select --</option>
      <option>Restaurant</option>
      <option>Catering</option>
      <option>Distributor</option>
      <option>Hospital</option>
      <option>School</option>
      <option>Retailer</option>
      <option>Manufacturer</option>
      <option>Other</option>
    </select>
  </label>

  <label>Years in Operation*
    <select name="contact[years_in_operation]" required>
      <option value="">-- Select --</option>
      <option>&lt;1</option>
      <option>1â€“3</option>
      <option>3â€“5</option>
      <option>5+</option>
    </select>
  </label>

  <h2>ðŸ”¹ Contact Info</h2>
  <label>Full Name*
    <input type="text" name="contact[full_name]" required>
  </label>

  <label>Job Title
    <input type="text" name="contact[job_title]">
  </label>

  <label>Email Address*
    <input type="email" name="contact[email]" required>
  </label>

  <label>Phone Number
    <input type="tel" name="contact[phone_number]">
  </label>

  <h2>ðŸ”¹ Location & Logistics</h2>
  <label>Primary Location / Address*
    <input type="text" name="contact[primary_location]" required>
  </label>

  <label>Do you operate multiple locations?
    <select name="contact[multiple_locations]">
      <option>No</option>
      <option>Yes</option>
    </select>
  </label>

  <label>If yes, how many?
    <input type="number" name="contact[number_of_locations]" min="1">
  </label>

  <label>Delivery Address (if different)
    <input type="text" name="contact[delivery_address]">
  </label>

  <h2>ðŸ”¹ Order Details</h2>
  <label>What products are you interested in?
    <select name="contact[product_interest][]" multiple>
      <option>Plant-Based Chicken</option>
      <option>Plant-Based Beef</option>
      <option>Vegan Cheese</option>
      <option>Prepared Meals</option>
      <option>Other</option>
    </select>
  </label>

  <label>Expected Monthly Volume*
    <select name="contact[monthly_volume]" required>
      <option>&lt;100 lbs</option>
      <option>100â€“500 lbs</option>
      <option>500â€“1,000 lbs</option>
      <option>1,000+ lbs</option>
    </select>
  </label>

  <label>Preferred Order Frequency*
    <select name="contact[order_frequency]" required>
      <option>Weekly</option>
      <option>Bi-weekly</option>
      <option>Monthly</option>
      <option>Ad hoc</option>
    </select>
  </label>

  <label>How do you currently source plant-based products?
    <select name="contact[current_source]">
      <option>Distributor</option>
      <option>Direct</option>
      <option>Not yet using</option>
      <option>Other</option>
    </select>
  </label>

  <h2>ðŸ”¹ Operations</h2>
  <label>Current Distributors or Broadliners</label>
  <div>
    <label><input type="checkbox" name="contact[distributors][]" value="Sysco"> Sysco</label>
    <label><input type="checkbox" name="contact[distributors][]" value="US Foods"> US Foods</label>
    <label><input type="checkbox" name="contact[distributors][]" value="KeHe"> KeHe</label>
    <label><input type="checkbox" name="contact[distributors][]" value="UNFI"> UNFI</label>
    <label>Other: <input type="text" name="contact[distributors_other]"></label>
  </div>

  <label>Request Sample Pack?
    <select name="contact[sample_request]">
      <option>No</option>
      <option>Yes</option>
    </select>
  </label>

  <label>Address for Sample Delivery
    <input type="text" name="contact[sample_address]">
  </label>

  <label>Certifications Required:</label>
  <div>
    <label><input type="checkbox" name="contact[certifications][]" value="Kosher"> Kosher</label>
    <label><input type="checkbox" name="contact[certifications][]" value="Halal"> Halal</label>
    <label><input type="checkbox" name="contact[certifications][]" value="Gluten-Free"> Gluten-Free</label>
    <label><input type="checkbox" name="contact[certifications][]" value="Non-GMO"> Non-GMO</label>
    <label><input type="checkbox" name="contact[certifications][]" value="Organic"> Organic</label>
    <label><input type="checkbox" name="contact[certifications][]" value="None"> None</label>
  </div>

  <h2>ðŸ”¹ Notes & Next Steps</h2>
  <label>Tell us more about your needs or menu plans
    <textarea name="contact[notes]" rows="5"></textarea>
  </label>

  <label>How did you hear about us?
    <select name="contact[referral_source]">
      <option>Referral</option>
      <option>Tradeshow</option>
      <option>Distributor</option>
      <option>Web search</option>
      <option>Social media</option>
      <option>Other</option>
    </select>
  </label>

  <button type="submit" class="btn">Submit Inquiry</button>
</form>

