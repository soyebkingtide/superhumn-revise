{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h2{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}


    {%- form 'contact', id: 'WholesaleInquiryForm', novalidate: 'novalidate' -%}

        {%- if form.errors -%}
          <h2 class="form__message" tabindex="-1" autofocus>
            <svg aria-hidden="true" focusable="false"><use href="#icon-error" /></svg>
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
          <ul>
            {%- for field in form.errors -%}
              <li>
                <a href="#ContactForm-{{ field }}">
                  {{ form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      
        <!-- ðŸ”¹ Company Info -->
        <div class="field">
          <input type="text" id="ContactForm-Company" name="contact[company_name]" placeholder="Company Name" required>
          <label for="ContactForm-Company">Company Name</label>
        </div>
      
        <div class="field">
          <input type="url" id="ContactForm-Website" name="contact[website]" placeholder="Website">
          <label for="ContactForm-Website">Website</label>
        </div>
      
        <div class="field">
          <select id="ContactForm-BusinessType" name="contact[business_type]" required>
            <option value="" disabled selected>-- Select Business Type --</option>
            <option>Restaurant</option>
            <option>Catering</option>
            <option>Distributor</option>
            <option>Hospital</option>
            <option>School</option>
            <option>Retailer</option>
            <option>Manufacturer</option>
            <option>Other</option>
          </select>
          <label for="ContactForm-BusinessType">Business Type</label>
        </div>
      
        <div class="field">
          <select id="ContactForm-Years" name="contact[years_in_operation]" required>
            <option value="" disabled selected>-- Years in Operation --</option>
            <option>&lt;1</option>
            <option>1â€“3</option>
            <option>3â€“5</option>
            <option>5+</option>
          </select>
          <label for="ContactForm-Years">Years in Operation</label>
        </div>
      
        <!-- ðŸ”¹ Contact Info -->
        <div class="field">
          <input type="text" id="ContactForm-FullName" name="contact[full_name]" placeholder="Full Name" required>
          <label for="ContactForm-FullName">Full Name</label>
        </div>
      
        <div class="field">
          <input type="text" id="ContactForm-JobTitle" name="contact[job_title]" placeholder="Job Title">
          <label for="ContactForm-JobTitle">Job Title</label>
        </div>
      
        <div class="field">
          <input type="email" id="ContactForm-Email" name="contact[email]" placeholder="Email Address" required
            {% if form.errors contains 'email' %}aria-invalid="true" aria-describedby="ContactForm-email-error"{% endif %}>
          <label for="ContactForm-Email">Email Address</label>
        </div>
        {%- if form.errors contains 'email' -%}
          <span id="ContactForm-email-error" class="form__message">
            <svg aria-hidden="true" focusable="false"><use href="#icon-error" /></svg>
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}.
          </span>
        {%- endif -%}
      
        <div class="field">
          <input type="tel" id="ContactForm-Phone" name="contact[phone_number]" placeholder="Phone Number">
          <label for="ContactForm-Phone">Phone Number</label>
        </div>
      
        <!-- ðŸ”¹ Location & Logistics -->
        <div class="field">
          <input type="text" id="ContactForm-PrimaryLocation" name="contact[primary_location]" placeholder="Primary Address" required>
          <label for="ContactForm-PrimaryLocation">Primary Address</label>
        </div>
      
        <div class="field">
          <select id="ContactForm-MultipleLocations" name="contact[multiple_locations]">
            <option>No</option>
            <option>Yes</option>
          </select>
          <label for="ContactForm-MultipleLocations">Multiple Locations?</label>
        </div>
      
        <div class="field">
          <input type="number" id="ContactForm-NumLocations" name="contact[number_of_locations]" placeholder="Number of Locations">
          <label for="ContactForm-NumLocations">If Yes, How Many?</label>
        </div>
      
        <div class="field">
          <input type="text" id="ContactForm-DeliveryAddress" name="contact[delivery_address]" placeholder="Delivery Address">
          <label for="ContactForm-DeliveryAddress">Delivery Address (if different)</label>
        </div>
      
        <!-- ðŸ”¹ Order Details -->
        <div class="field">
          <label>Product Interests</label>
          <select name="contact[product_interest][]" multiple>
            <option>Plant-Based Chicken</option>
            <option>Plant-Based Beef</option>
            <option>Vegan Cheese</option>
            <option>Prepared Meals</option>
            <option>Other</option>
          </select>
        </div>
      
        <div class="field">
          <select id="ContactForm-Volume" name="contact[monthly_volume]" required>
            <option value="">-- Expected Monthly Volume --</option>
            <option>&lt;100 lbs</option>
            <option>100â€“500 lbs</option>
            <option>500â€“1,000 lbs</option>
            <option>1,000+ lbs</option>
          </select>
          <label for="ContactForm-Volume">Monthly Volume</label>
        </div>
      
        <div class="field">
          <select id="ContactForm-Frequency" name="contact[order_frequency]" required>
            <option>Weekly</option>
            <option>Bi-weekly</option>
            <option>Monthly</option>
            <option>Ad hoc</option>
          </select>
          <label for="ContactForm-Frequency">Order Frequency</label>
        </div>
      
        <div class="field">
          <select name="contact[current_source]">
            <option>Distributor</option>
            <option>Direct</option>
            <option>Not yet using</option>
            <option>Other</option>
          </select>
          <label>Current Source of Plant-Based Products</label>
        </div>
      
        <!-- ðŸ”¹ Operations -->
        <div class="field">
          <label>Current Distributors</label><br>
          <input type="checkbox" name="contact[distributors][]" value="Sysco"> Sysco<br>
          <input type="checkbox" name="contact[distributors][]" value="US Foods"> US Foods<br>
          <input type="checkbox" name="contact[distributors][]" value="KeHe"> KeHe<br>
          <input type="checkbox" name="contact[distributors][]" value="UNFI"> UNFI<br>
          <label>Other: <input type="text" name="contact[distributors_other]"></label>
        </div>
      
        <div class="field">
          <select name="contact[sample_request]">
            <option>No</option>
            <option>Yes</option>
          </select>
          <label>Request Sample Pack?</label>
        </div>
      
        <div class="field">
          <input type="text" name="contact[sample_address]" placeholder="Sample Delivery Address">
          <label>Sample Delivery Address</label>
        </div>
      
        <div class="field">
          <label>Required Certifications</label><br>
          <input type="checkbox" name="contact[certifications][]" value="Kosher"> Kosher<br>
          <input type="checkbox" name="contact[certifications][]" value="Halal"> Halal<br>
          <input type="checkbox" name="contact[certifications][]" value="Gluten-Free"> Gluten-Free<br>
          <input type="checkbox" name="contact[certifications][]" value="Non-GMO"> Non-GMO<br>
          <input type="checkbox" name="contact[certifications][]" value="Organic"> Organic<br>
          <input type="checkbox" name="contact[certifications][]" value="None"> None<br>
        </div>
      
        <!-- ðŸ”¹ Notes & Referral -->
        <div class="field">
          <textarea name="contact[notes]" rows="4" placeholder="Tell us more about your needs or menu plans"></textarea>
          <label>Additional Notes</label>
        </div>
      
        <div class="field">
          <select name="contact[referral_source]">
            <option>Referral</option>
            <option>Tradeshow</option>
            <option>Distributor</option>
            <option>Web search</option>
            <option>Social media</option>
            <option>Other</option>
          </select>
          <label>How did you hear about us?</label>
        </div>
      
        <button type="submit" class="button">Submit Wholesale Inquiry</button>
      
      {%- endform -%}
      
      <!-- Optional Booking -->
      <div style="margin-top: 2rem;">
        <h3>ðŸ“… Prefer to speak directly?</h3>
        <a href="https://calendly.com/paul-johnson-call" target="_blank" class="button">Book a Call with Paul Johnson</a>
      </div>

      

  </div>
</div>

{% schema %}
{
  "name": "Partner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
