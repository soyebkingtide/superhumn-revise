    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .superhumn-multicolumns-v2  .multicolumn-card__image-wrapper{ margin:auto; }
  .superhumn-multicolumns-v2  .multicolumn-card{ background:transparent!important;}
  .superhumn-multicolumns-v2{
 --grid-desktop-horizontal-spacing:5rem;
   --grid-desktop-vertical-spacing:5rem;
  }



 
