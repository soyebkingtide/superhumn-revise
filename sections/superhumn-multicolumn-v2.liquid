   width:100%!important;
  overflow:hidden;
}


.superhumn-title-{{ section.id }}:before {
    content: '{{ section.settings.heading }}';
    position:absolute;
     left: 50%;
     transform: translateX(-50%);
  top: -48%;
  z-index: -1;
  width:100%!important;
  color: transparent;
  -webkit-text-stroke-width: 2px;
-webkit-text-stroke-color:  #fff;

  height: 33%;
    overflow:hidden;
  
}


.mom{
  position:relative;
}


.quotes{
  position:absolute;
 right: 64px;
  bottom: -35px;
  z-index: 2;
  }

  @media(max-width:749px){
    .quotes{


  bottom: 48px;

  }

  }


  
